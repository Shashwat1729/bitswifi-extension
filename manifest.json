{
  "manifest_version": 3,
  "name": "BITS Auto Login Extension",
  "version": "1.1",
  "description": "Automatically logs into the college portal using multiple credentials and checks internet connectivity.",
  "permissions": [
    "tabs", 
    "scripting", 
    "storage", 
    "alarms"
  ],
  "host_permissions": [
    "http://172.16.0.30:8090/",
    "http://172.16.100.117/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html"
}
